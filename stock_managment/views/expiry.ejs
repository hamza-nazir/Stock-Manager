<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Expiry Products</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>

<body>
  <nav class="dashboard-nav">
    <div class="nav-container">
      <div class="logo">
        <i class="fas fa-boxes"></i>
        <span>StockMaster</span>
      </div>
      <div class="nav-items">
      
      </div>
    </div>
  </nav>

  <div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <ul class="nav-menu">
        <li><a href="/"><i class="fas fa-home"></i><span>Home</span></a></li>
        <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a></li>
        <li><a href="/products"><i class="fas fa-plus-circle"></i><span>Add Product</span></a></li>
        <li><a href="/aboutus"><i class="fas fa-info-circle"></i><span>About Us</span></a></li>
        <li><a href="/activity"><i class="fas fa-chart-line"></i><span>Activity</span></a></li>

      </ul>
    </aside>

    <!-- Main content -->
    <main class="main-content">
      <header class="content-header">
        <h1><i class="fas fa-clock"></i> Expiry Details</h1>
        <div class="breadcrumb">Dashboard / Expiry</div>
      </header>

   <section class="metrics-section expiry-section">
  <% let todayDate = new Date(); %>

  <% for (data of result) { %>
    <% let currentDate = new Date(data.expiry); %>

    <% if (todayDate < currentDate) { %>
      <div class="expiry-card not-expired-card">
        <h3><i class="fas fa-box"></i> <%= data.name %></h3>
        <p class="status">ðŸŸ¢ Not Expired</p>
        <p class="date"><strong>Expiry:</strong> <%= currentDate.toLocaleString() %></p>
      </div>
    <% } else { %>
      <div class="expiry-card expired-card">
        <h3><i class="fas fa-box"></i> <%= data.name %></h3>
        <p class="status">ðŸ”´ Expired</p>
        <p class="date"><strong>Expiry:</strong> <%= currentDate.toLocaleString() %></p>
      </div>
    <% } %>
  <% } %>
</section>

    </main>
  </div>
</body>
</html>
