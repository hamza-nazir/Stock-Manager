 <link rel="stylesheet" href="/css/products.css">
</head>
<body>
  <nav class="dashboard-nav">
    <div class="nav-container">
      <div class="logo">
        <i class="fas fa-boxes"></i>
        <span>StockMaster</span>
      </div>
      <div class="nav-items">
        
        
      
      </div>
    </div>
  </nav>

  <div class="dashboard-container">
    <aside class="sidebar">
      <ul class="nav-menu">
        <li>
          <a href="/" >
            <i class="fas fa-home"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a  href="/dashboard" >
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li>
          <a class="activee" href="/products">
            <i class="fas fa-plus-circle"></i>
            <span>Add Product</span>
          </a>
        </li>
      
        <li>
          <a href="/aboutus">
            <i class="fas fa-info-circle"></i>
            <span>About Us</span>
          </a>
        </li>
        <li>
          <a href="/activity">
            <i class="fas fa-chart-line"></i>
            <span>Activity</span>
          </a>
        </li>
      </ul>
    </aside>

    <main class="main-content">
      <header class="content-header">
        <h1><i class="fas fa-home"></i>Dashboard</h1>
        <div class="breadcrumb">Dashboard / Home</div>
      </header>

 
<div>
   

<form action="/products" method="post">
 <section id="secTwo">
      <h1 class="page-header">Add New Product</h1>
      
      <div class="form-container">
        <form class="form-grid">

               <div class="form-group">
            <label for="product-sku">Product ID</label>
            <input name="id" type="text" id="product-sku" required placeholder="Enter SKU">
          </div>

          <div class="form-group">
            <label for="product-name">Product Name</label>
            <input name="name" type="text" id="product-name" required placeholder="Enter product name">
          </div>
          
       
              <div class="form-group">
            <label for="product-supplier">Supplier</label>
            <input name="supplier" type="text" id="product-supplier" placeholder="Enter supplier name">
          </div>
          
             <div class="form-group">
            <label for="product-price">Price ($)</label>
            <input name="price" type="number" id="product-price" step="0.01" required placeholder="0.00">
          </div>

          
          <div class="form-group">
            <label for="product-category">Category</label>
            <select name="category" id="product-category" >
              <option value="">Select category</option>
              <option value="Electronics">Electronics</option>
              <option value="Clothing">Clothing</option>
              <option value="Groceries">Groceries</option>
              <option value="Furniture">Furniture</option>
              <option value="Other">Other</option>
            </select>
          </div>
          
        <div class="form-group full-width">
            <label for="date">Expiry</label>
<input type="date" name="expiry" id="date">
          </div>
           
          <div class="form-group">
            <label for="product-quantity">Quantity in Stock</label>
            <input name="quantity" type="number" id="product-quantity" required placeholder="0">
          </div>
          

          
          <div class="form-actions">

            <button id="btn" type="submit" class="btn-primary">Add Product</button>

          </div> 
          
      </div>
    </section>
   
  </form>
 
  </div>




</div>

    
      
  <script src="/js/home.js"></script>
</body>
</html>