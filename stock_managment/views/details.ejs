<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title>StockMaster Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/detail.css">
</head>

<body>
  <nav class="dashboard-nav">
    <div class="nav-container">
      <div class="logo">
        <i class="fas fa-boxes"></i>
        <span>StockMaster</span>
      </div>
      <div class="nav-items">

     

      </div>
    </div>
  </nav>

  <div class="dashboard-container">
    <aside class="sidebar">
      <ul class="nav-menu">
        <li>
          <a href="/">
            <i class="fas fa-home"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a class="active" href="/dashboard">
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/products">
            <i class="fas fa-plus-circle"></i>
            <span>Add Product</span>
          </a>
        </li>

        <li>
          <a href="/aboutus">
            <i class="fas fa-info-circle"></i>
            <span>About Us</span>
          </a>
        </li>
        <li>
          <a href="/activity">
            <i class="fas fa-chart-line"></i>
            <span>Activity</span>
          </a>
        </li>
      </ul>
    </aside>

    <main class="main-content">
   


   
<div>

       <section id="secTwo">
            <h1 class="page-header">Product Details</h1>
            
            <div class="product-detail-card">
                <div class="product-header">
                    <h2><%=data.name  %></h2>
                    <span class="product-category"><%=data.category  %></span>
                </div>
                
                <div class="product-details-grid">
                    <div class="detail-item">
                        <span>Product Code:</span>
                        <strong><%=data.id %></strong>
                    </div>
                    <div class="detail-item">
                        <span>Price:</span>
                        <strong><%=data.price %></strong>
                    </div>
                    <div class="detail-item">
                        <span>Quantity in Stock:</span>
                        <strong><%=data.quantity %></strong>
                    </div>
                    <div class="detail-item">
                        <span>Supplier:</span>
                        <strong><%=data.supplier %></strong>
                    </div>

                    
                    <div class="detail-item ">
                        <span>Expiry:</span>
                        <strong><%= data.expiry.toISOString().split('T')[0] %></stro>

                    </div>
                </div>
                
                <div class="action-buttons">

                    <a href="/dashboard" class="btn secondary">Back to Dashboard</a>
                </div>
            </div>
        </section>

</div>


      <script src="/js/home.js"></script>
</body>

</html>